@model IEnumerable<Banglafire_Solution_Ltd_Task.Models.Student>

@{
    ViewBag.Title = "Index";
    var i = 0;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between mb-1">
            <a href="@Url.Action("Create", "Students")" class="btn btn-outline-primary btn-sm"><i class="bi bi-plus"></i> Create New</a>
            <h6>Student List</h6>
            <button type="button" id="recordCountBtn" class="btn btn-primary">
                Total Record(s) <span class="badge badge-light">0</span>
            </button>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="text-center">
                    <th>SI#</th>
                    <th>Student ID</th>
                    <th>Student Name</th>
                    <th>Birth Date</th>
                    <th>Class</th>
                    <th>Section</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@(++i)</td>
                        <td>@a.StudentID</td>
                        <td>@a.StudentName</td>
                        <td>@a.DateOfBirth.ToString("dd-MM-yyyy")</td>
                        <td>@a.Class</td>
                        <td>@a.Section</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", "Students", new {id=a.StudentID})" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                            <a href="@Url.Action("Delete", "Students", new {id=a.StudentID})" class="btn btn-danger btn-sm deleteBtn"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section styles
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}

@section scripts
{
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script>
        $(document).ready(function () {
            // Function to update the record count badge
            function updateRecordCount() {
                var recordCount = $("table tbody tr").length;
                $("#recordCountBtn .badge").text(recordCount);
            }

            // Call updateRecordCount initially to set the initial count
            updateRecordCount();

        });

    </script>
}

